@import "bootstrap-sass-official/assets/stylesheets/bootstrap-sprockets";
@import "bootstrap-sass-official/assets/stylesheets/bootstrap";

#main #background-image.pencil{
	background: image-url("writing.jpg") no-repeat center center fixed;
	background-size: cover;

}

#main #background-image.git{
	background: image-url("git.png") no-repeat center center fixed;
  	background-size: cover;

}

#main #background-image.list-ul{
	background: image-url("resume.png") no-repeat center center fixed;
  	background-size: cover;

}

#main {
	height: 100%;
	width: 100%;
	position: fixed;
	overflow: hidden;
}

#main #background-image{
	position: absolute;
	width: 0;
	height: 100%;
	z-index: 0;
	transition: all 1s ease;
	left: 100%;
	opacity: 25%;
}

#main #background-image-overlay{
	position: absolute;
	width: 100%;
	height: 100%;
	z-index: 1;
	background: rgba(255, 255, 255, 0.6);
}

#main #container{
	position: absolute;
	z-index: 2;
	left: 50%;
	top: 50%;
	margin-top: -1%s;
	transform: translate(-50%, -50%);
}

#main #container #icons {
	text-align: center;
}

#main #container #icons i{
	margin: 0 5px;
	cursor: pointer;
}

#main #background-image.show{
	left: 0; 	
	width: 100%;
}