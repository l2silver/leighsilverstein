@import "bootstrap-sass-official/assets/stylesheets/bootstrap-sprockets";
@import "bootstrap-sass-official/assets/stylesheets/bootstrap";

#home {
	height: 100%;
	width: 100%;
	position: fixed;
	overflow-y: scroll;
	#background-image{
		position: fixed;
		width: 0;
		height: 100%;
		z-index: 0;
		transition: all 1s ease;
		left: 100%;
		&.pencil{
			background: image-url("writing.jpg") no-repeat center center fixed;
			background-size: cover;
		}
		&.git{
			background: image-url("git.png") no-repeat center center fixed;
			background-size: cover;

		}
		&.list-ul{
			background: image-url("resume.png") no-repeat center center fixed;
			background-size: cover;

		}
		&.envelope{
			background: #fff;
			background-size: cover;

		}
		&.show{
			left: 0; 	
			width: 100%;
		}
		&.overlay{
			background: rgba(255, 255, 255, 0.6);
			z-index: 1;
		}
	}
}
#main{
	height: 100%;
	width: 100%;	
	#container{
		position: absolute;
		z-index: 2;
		left: 50%;
		top: 50%;
		margin-top: -1%;
		transform: translate(-50%, -50%);
		text-align: center;
	}
}

$blue : #777BC5;

#resume{
	.container{
		z-index: 2;
		position: relative;
		height:100%;
		width: 100%;
		margin-top: 100px;
		max-width: 900px;
		#header{
			p{
				font-size: 2em;
				color: $blue;
				text-align: left;
			}
			ul{
				li{
					font-size: 1em;
					text-align: right;
				}
			}
		}
		#body{
			.resume-group{
				p{
					font-size: 1.5em;
					color: $blue;
					text-align: left;
				}
			}
			.resume-post{
				p{
					font-size: 1em;
					color: #000;
					text-align: left;
				}
				span{
						float: right;
					}
				ul{
					li{
						text-index: 10px;
					}
					li + li{
					content: "<hr>";
					}
				}
			}
			.resume-lines{
				p{
					font-size: 1.5em;
					color: $blue;
					text-align: left;
				}
			}
		}
	}
}

#writing{
	.container{
		z-index: 2;
		position: relative;
		height:100%;
		width: 100%;
		margin-top: 100px;
		max-width: 900px;
		ul{
			&.list-unstyled{
				margin-left: 40px;
				cursor: pointer;
			}
		}

		.writing-container{
			transition: 0.25s ease all;
			&.ng-hide{
				opacity: 0;
				&.ng-hide-active{
					opacity: 1;
				}
			}
			&.ng-show{
				opacity: 1;
				&.ng-show-active{
					opacity: 0;
				}
			}
		}
	}
}

nav {
	#icons {
		text-align:center;
		i {
			height: 100%;
			vertical-align: center;
			padding: 17px 10px;
			cursor: pointer;
		}
	}
}

.content-view{
	transition: 0.5s ease all;
	&.ng-leave{
	 	opacity: 1;
		&.ng-leave-active {
		  opacity: 0;
		}
	}
	&.ng-enter{
	 	opacity: 1;
	 	visibility: hidden;
		&.ng-enter-active {
		  opacity: 0;
		}
	}
}